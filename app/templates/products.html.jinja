{% extends "layout.html.jinja" %}

{% block middle %}
    <h2> Products </h2>
    <ul class="list-group list-group-flush">
    {% for product in products %}
        <li class="list-group-item">
            <a href="{{url_for('product', productId=product['productId'])}}">{{product['name']}}</a>
            <p class="list-group-item">
                <span class="badge rounded-pill bg-info badge-secondary">{{product['opinionsCount']}}</span>
                <span class="badge rounded-pill bg-danger">{{product['averageScore']}}</span>
                <span class="badge rounded-pill bg-success">{{product['prosCount']}}</span>
                <span class="badge rounded-pill bg-info">{{product['consCount']}}</span>
        </li>
    {% endfor %}
    </ul>
{% endblock middle %}